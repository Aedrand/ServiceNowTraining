        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//Check if 'current' is a new record. If so, do not execute.
	if(!current.isNewRecord()) {
		//Create a record containing mods that are for the current program.
		var modsForProg = new GlideRecord('x_134426_mod_list_all_mods');
		modsForProg.addQuery('program.name','=', current.name);
		modsForProg.query();
		
		//Set the number of mods to the rowcount of the record.
		current.setValue('number_of_mods', modsForProg.getRowCount());
		current.update();
	}
})(current, previous);]]></script>
